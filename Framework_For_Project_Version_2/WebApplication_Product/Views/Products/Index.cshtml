@using WebApplication_Product.Models

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<table cellpadding="2" cellspacing="2" border="1">
	<tr>
		<th>Id</th>
		<th>Name</th>
		<th>Photo</th>
		<th>Price</th>
		<th>Buy</th>
	</tr>
	@foreach (Product product in ViewBag.products)
	{
		<tr>
			<td>@product.ProductId</td>
			<td>@product.ProductName</td>
			<td><img src="~/Content/Images/@product.productLinkImg" width="60" /> </td>
			<td>@product.ProductPrice</td>
			<td align="center">
				<a href="@Url.Action("Buy", "Carts", new { id = product.ProductId })">Buy Now</a>
			</td>
		</tr>
	}
</table>