@model IEnumerable<WebApplication_PrepareTest.Models.Exam>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Exams", FormMethod.Get)) 
{
    <p>Pass: @Html.RadioButton("status", "Pass")</p>
    <p>Fail: @Html.RadioButton("status", "Fail")</p>
    <p>Pass and Fail: @Html.RadioButton("status", "PassAndFail")</p>
    @Html.TextBox("name");
    @Html.DropDownList("dropdownSub", (IEnumerable<SelectListItem>)ViewBag.subname, "Select");
    <input type="submit" name="submit" value="submit" />
}
@if(Model.Count() == 0)
{
    <script type="text/javascript">
        alert("Không có dữ liệu");
    </script>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Student.StudentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mark)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Student.StudentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.SubjectName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mark)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ExamId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ExamId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ExamId })
        </td>
    </tr>
}

</table>
