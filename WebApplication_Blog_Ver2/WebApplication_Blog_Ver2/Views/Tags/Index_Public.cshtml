@model IEnumerable<WebApplication_Blog_Ver2.Models.BlogModel.Tag>

@{
	ViewBag.Title = "List Tag";
}

<h2>Thông tin các tag mình thường sử dụng</h2>

<div class="container-fluid">
	<div class="row">

		@foreach (var item in Model)
		{
			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4"> <!--xs: phone, sm: tablets, md: laptop, lg=desktop & laptop.  Mục đích là để kéo rộng thẻ div-->
				<div class="img-thumbnail">
					<div style="height: 40px;width: 120px; background-color: rgb(251, 255, 241);">
						@using (Html.BeginForm("BlogPublic_TagList", "Blogs", FormMethod.Get))
						{
						<a>
							<input type="submit" name="check" value="@item.TagName" style="background: none; color: inherit;
						border: none; padding: 0; font: inherit; cursor: pointer; outline: inherit; padding-left: 43px; padding-top: 10px;" />
						</a>
						}
					</div>
				</div>
			</div>
		}

	</div> <!-- End row -->
</div><!-- End container -->
