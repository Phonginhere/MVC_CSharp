@model WebApplication_EProject.Models.Request.Request

@{
	ViewBag.Title = "GiamDoc_Check_NhanSu";
}

<script type="text/javascript">
	function denyStatus() {
		document.getElementById("note").disabled = false;
	}
	function noStatus() {
		document.getElementById("note").disabled = true;
	}
	function approveStatus() {
		document.getElementById("note").disabled = true;
	}
	function pauseStatus() {
		document.getElementById("note").disabled = true;
	}
</script>
<h2>GiamDoc_Check_NhanVien</h2>

@using (Html.BeginForm("GiamDoc_Check_NhanSu", "Requests", FormMethod.Post))
{

	@Html.AntiForgeryToken();
	<div>
		<h4> Request </h4>
		<hr />
		<dl class="dl-horizontal">
			<dd>
				@Html.HiddenFor(model => model.Request_Id)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.NhanVien.Ten)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.NhanVien.Ten)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Role.RoleName)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Role.RoleName)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.VanPhongPham.productName)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.VanPhongPham.productName)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Unit)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Unit)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Quantity)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Quantity)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Price)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Price)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Purpose)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.Purpose)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.DateAdd)
			</dt>

			<dd>
				@Html.DisplayFor(model => model.DateAdd)
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Status)
			</dt>

			<dd>
				@if (Model.Status == 1)
				{
					<p>Giám đốc đang xét duyệt</p>
				}
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Pause)
			</dt>

			<dd>
				@if (Model.Pause == true)
				{
					<p>Có</p>
				}
			</dd>

			<dt>
				@Html.DisplayNameFor(model => model.Note)
			</dt>

			<dd>
				@Html.EditorFor(model => model.Note, new { htmlAttributes = new { @class = "form-control", id = "note", disabled = "disabled" } })
				@Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
			</dd>

			<dt>
				Trạng thái
			</dt>

			<dd>
				Chưa phê duyệt @Html.RadioButtonFor(m => m.Status, "1", new { onclick = "if(this.checked){noStatus()}" })|
				Chấp thuận @Html.RadioButtonFor(m => m.Status, "2", new { onclick = "if(this.checked){approveStatus()}" })|
				Từ chối @Html.RadioButtonFor(m => m.Status, "-1", new { onclick = "if(this.checked){denyStatus()}" })|
				Tạm hoãn @Html.RadioButtonFor(m => m.Status, "tạm hoãn", new { onclick = "if(this.checked){pauseStatus()}" })
			</dd>
			<dt>
				Xác nhận
			</dt>
			<dd>
				@Html.CheckBox("approve", "Đồng ý")
			</dd>
		</dl>
	</div>
	<p>
		<input type="submit" value="Lưu" class="btn btn-default" />
		@Html.ActionLink("Quay trở lại trang yêu cầu", "Index")
	</p>
}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
