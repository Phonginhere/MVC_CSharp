@model WebApplication_EProject.Models.QvA.Answer

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div style="background: #202020;
        color: white;
        border-radius: 1em;
        padding: 1em;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%);
        text-align: center" class="form-horizontal">
    <h4>Answer</h4>
    <hr />
    <div style="left:8%" class="col-md-10">
        @Html.LabelFor(model => model.answer_question, htmlAttributes: new { @class = "control-label col-md-2" })
    </div>
    <div class="form-group">

        <div style="left:9%" class="col-md-10">
            @Html.EditorFor(model => model.answer_question, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.answer_question, "", new { @class = "text-danger" })
        </div>
    </div>


    <div style="left:8%" class="col-md-10">
        @Html.LabelFor(model => model.QuestionId, htmlAttributes: new { @class = "control-label col-md-2" })
    </div>

    @Html.HiddenFor(model => model.QuestionId, (object)ViewBag.question_id)
    @*<div class="form-group">
        <div style="left:9%" class="col-md-10">
                @Html.EditorFor(model => model.QuestionId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QuestionId, "", new { @class = "text-danger" })
            </div>
    </div>*@

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Previous", "Question_Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
